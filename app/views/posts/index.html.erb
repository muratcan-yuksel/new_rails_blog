
<%
=begin%>
 <h1>Posts</h1> 
<%
=end%>


<%
=begin%>
 <table >
  <thead>
    <tr>
      <th>Title</th>
      <th>Category</th>
      <th>Author</th>
      <th>Content</th>
      <th>Image url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
         <%= post.title %> 
         <%= post.category %> 
         <%= post.author %> 
         <%= post.content %> 
         <%= post.image_url %> 
         <%if admin_signed_in? %>
         <%= link_to 'Show', post %> 
         <%= link_to 'Edit', edit_post_path(post) %> 
         <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %> 
       <% end %>
      </tr>
    <% end %>
  </tbody>
</table> 
<%
=end%>



<div>
   <% @posts.each do |post| %>
<h2><%= post.title %></h2>
<img src=<%= post.image_url %> alt="">
<p><%= post.content %></p>
  <%if admin_signed_in? %>
        <%= link_to 'Show', post, class:"btn btn-info" %>
         <%= link_to 'Edit', edit_post_path(post), class:"btn btn-warning"  %> 
         <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } , class:"btn btn-danger"  %> 
       <% end %>
    <% end %>

</div>

<br>
     <%if admin_signed_in? %>

<%= link_to 'New Post', new_post_path , class:"btn btn-success" %>
       <% end %>
